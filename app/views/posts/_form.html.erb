<%= form_with(model:@post,local:true, url: choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul style="text-align:center">
         <% @post.errors.full_messages.each do |msg| %>
           <li style="display: inline"><%= msg %></li>
         <% end %>
      </ul>
  <% end %>
  <div class="sub-container">
  <div class="post_title">
     <%= form.label :content, "ツブヤキ" %></br>
  </div>
  <div class="post_content">
     <%= form.text_area :content %>
  </div>
  <%= form.submit "ツブヤキを保存する", data: {confirm: "本当に保存してもいいですか？"} %>
  <%= link_to "一覧に戻る", posts_path %>
  </div>
<% end %>
